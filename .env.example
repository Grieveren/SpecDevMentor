# CodeMentor AI - Production Environment Configuration
# Copy this file to .env and update the values for your environment

# Application Environment
NODE_ENV=production
PORT=3001
CLIENT_URL=http://localhost:3000
SERVER_URL=http://localhost:3001

# Database Configuration (Production)
DATABASE_URL="postgresql://codementor:password@localhost:5432/codementor_ai"
DATABASE_URL_TEST="postgresql://codementor:password@localhost:5433/codementor_ai_test"

# Redis Configuration
REDIS_URL="redis://localhost:6379"
REDIS_URL_TEST="redis://localhost:6380"

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.3

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@codementor-ai.com

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=uploads
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,txt,md

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX=10  # AI requests per window

# Security (CHANGE THESE IN PRODUCTION!)
ENCRYPTION_SALT=your-encryption-salt-exactly-32-characters-long
SESSION_SECRET=your-session-secret-key-min-32-characters-long
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=false

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log
ERROR_LOG_FILE=logs/error.log
ACCESS_LOG_FILE=logs/access.log

# Performance Monitoring
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Feature Flags
ENABLE_AI_REVIEW=true
ENABLE_CODE_EXECUTION=true
ENABLE_COLLABORATION=true
ENABLE_ANALYTICS=true
ENABLE_LEARNING=true
ENABLE_FILE_UPLOAD=true

# Development/Testing
SEED_DATABASE=true
ENABLE_DEBUG_LOGS=false
ENABLE_SQL_LOGGING=false

# Docker Configuration
POSTGRES_DB=codementor_ai
POSTGRES_USER=codementor
POSTGRES_PASSWORD=password

# WebSocket Configuration
WS_PORT=3002
WS_CORS_ORIGIN=http://localhost:3000

# Code Execution Security
CODE_EXECUTION_TIMEOUT=30000  # 30 seconds
CODE_EXECUTION_MEMORY_LIMIT=128m
CODE_EXECUTION_CPU_LIMIT=0.5