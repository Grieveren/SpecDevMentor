{
  "name": "@codementor-ai/client",
  "version": "1.0.0",
  "description": "React frontend for CodeMentor AI platform",
  "type": "module",
  "scripts": {
    "dev": "vite --port 5173",
    "build": "tsc --noEmit && vite build",
    "build:only": "vite build",
    "preview": "vite preview",
    "test": "vitest run --config vitest.config.ts",
    "test:watch": "vitest --config vitest.config.ts",
    "test:ui": "vitest --ui --config vitest.config.ts",
    "test:coverage": "vitest run --coverage --config vitest.config.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit --incremental",
    "type-check:watch": "tsc --noEmit --watch",
    "type-check:strict": "tsc --noEmit --strict",
    "type-check:incremental": "tsc --noEmit --incremental",
    "clean": "rm -rf dist node_modules .tsbuildinfo",
    "analyze": "vite build --mode analyze",
    "build:size-check": "vite-bundle-analyzer dist/assets/*.js",
    "build:validate": "npm run type-check && npm run lint && npm run test && npm run build",
    "build:performance": "time npm run build && npm run build:size-check"
  },
  "dependencies": {
    "@headlessui/react": "^1.7.15",
    "@heroicons/react": "^2.0.18",
    "@hookform/resolvers": "^3.1.1",
    "@tanstack/react-query": "^4.32.0",
    "axios": "^1.4.0",
    "clsx": "^2.0.0",
    "date-fns": "^4.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.45.2",
    "react-markdown": "^8.0.7",
    "react-router-dom": "^6.14.2",
    "react-syntax-highlighter": "^15.5.0",
    "socket.io-client": "^4.7.2",
    "tailwind-merge": "^1.14.0",
    "zod": "^3.23.8",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "@types/react-syntax-highlighter": "^15.5.7",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.0.3",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^0.34.1",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "jsdom": "^22.1.0",
    "msw": "^1.2.3",
    "postcss": "^8.4.27",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.5",
    "vitest": "^0.34.1"
  }
}
