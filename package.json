{
  "name": "codementor-ai-platform",
  "version": "1.0.0",
  "description": "AI-powered specification-based development learning platform",
  "private": true,
  "workspaces": [
    "client",
    "server",
    "shared",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter client dev\" \"pnpm --filter server dev\"",
    "build": "pnpm type-check && pnpm --filter client build && pnpm --filter server build",
    "build:client": "pnpm --filter client type-check && pnpm --filter client build",
    "build:server": "pnpm --filter server type-check && pnpm --filter server build",
    "start": "./scripts/start-production-local.sh",
    "stop": "./scripts/stop-production-local.sh",
    "reset": "./scripts/reset-local-environment.sh",
    "test": "pnpm --recursive test",
    "test:watch": "pnpm --recursive test:watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:run": "./scripts/run-e2e-tests.sh",
    "test:all": "./scripts/run-e2e-tests.sh all",
    "test:smoke:run": "./scripts/run-e2e-tests.sh smoke",
    "test:accessibility:run": "./scripts/run-e2e-tests.sh accessibility",
    "test:security:run": "./scripts/run-e2e-tests.sh security",
    "test:performance:run": "./scripts/run-e2e-tests.sh performance",
    "test:compliance:run": "./scripts/run-e2e-tests.sh compliance",
    "test:accessibility": "playwright test --grep @accessibility",
    "test:security": "playwright test --grep @security",
    "test:smoke": "playwright test e2e/smoke.spec.ts",
    "test:performance": "playwright test e2e/performance.spec.ts",
    "test:compliance": "playwright test e2e/compliance.spec.ts",
    "test:uat": "echo 'See UAT_TESTING_GUIDE.md for comprehensive testing scenarios'",
    "lint": "pnpm --recursive lint",
    "lint:fix": "pnpm --recursive lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "type-check": "tsc --noEmit && pnpm --recursive type-check",
    "type-check:watch": "tsc --noEmit --watch",
    "type-check:client": "pnpm --filter client type-check",
    "type-check:server": "pnpm --filter server type-check",
    "type-check:strict": "tsc --noEmit --strict && pnpm --recursive type-check:strict",
    "type-check:incremental": "tsc --noEmit --incremental && pnpm --recursive type-check:incremental",
    "build:validate": "pnpm type-check && pnpm lint && pnpm test && pnpm build",
    "build:validate:pipeline": "./scripts/validate-build.sh",
    "build:analyze": "pnpm --filter client analyze && pnpm build:server",
    "build:performance": "time pnpm build && pnpm build:size-check",
    "build:size-check": "pnpm --filter client build:size-check",
    "clean": "pnpm --recursive clean && rm -f .tsbuildinfo",
    "clean:build": "rm -rf client/dist server/dist shared/dist .tsbuildinfo client/.tsbuildinfo server/.tsbuildinfo shared/.tsbuildinfo",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:full": "docker-compose --profile full-stack up -d",
    "docker:monitoring": "docker-compose --profile monitoring up -d",
    "db:migrate": "pnpm --filter server db:migrate",
    "db:seed": "pnpm --filter server db:seed",
    "db:reset": "pnpm --filter server db:reset",
    "db:backup": "./scripts/backup-database.sh",
    "health": "curl -f http://localhost:3001/health || echo 'Server not running'",
    "logs": "tail -f logs/server.log logs/client.log",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.10.2",
    "@playwright/test": "^1.54.1",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "axe-core": "^4.10.3",
    "concurrently": "^8.2.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^5.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.3",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.6.0"
}
