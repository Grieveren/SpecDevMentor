# Production Environment Configuration
NODE_ENV=production

# Server Configuration
PORT=3001
CLIENT_URL=https://codementor-ai.com

# Database Configuration (will be overridden by Kubernetes secrets)
DATABASE_URL="postgresql://postgres:POSTGRES_PASSWORD@postgres-service:5432/codementor_ai?schema=public"

# Redis Configuration (will be overridden by Kubernetes secrets)
REDIS_URL="redis://redis-service:6379"

# JWT Configuration (will be overridden by Kubernetes secrets)
JWT_SECRET=REPLACE_WITH_SECURE_JWT_SECRET
REFRESH_SECRET=REPLACE_WITH_SECURE_REFRESH_SECRET

# OpenAI Configuration
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# File Upload Configuration
MAX_FILE_SIZE=10485760  # 10MB
UPLOAD_DIR=/app/uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# Security
ENCRYPTION_SALT=REPLACE_WITH_32_CHAR_ENCRYPTION_SALT
SESSION_SECRET=REPLACE_WITH_SESSION_SECRET_KEY

# Performance
NODE_OPTIONS="--max-old-space-size=1024"

# Health Check
HEALTH_CHECK_TIMEOUT=5000